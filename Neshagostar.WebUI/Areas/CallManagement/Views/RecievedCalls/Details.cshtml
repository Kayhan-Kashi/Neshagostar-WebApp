@model Neshagostar.DAL.DataModel.CallManagement.RecievedCall

@{
    ViewBag.Title = "Details";
}

<h2 style="padding-right:0px;">جزئیات تماس</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CallerId)
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-md-5" style="margin-top:6px;">
            <div>
                <div class="form-group">
                    @Html.Label("نام طرف تماس", htmlAttributes: new { @class = "control-label col-md-3", style = "text-align:center;" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Caller.Name, new { htmlAttributes = new { @class = "form-control", dir = "rtl", id = "callerName", style = "width:70%;margin-right:-20px;", @readonly = "true" } })

                    </div>
                </div>
                <div class="form-group" style="margin-top:40px;">
                    @Html.Label("شماره تماس", htmlAttributes: new { @class = "control-label col-md-3", style = "text-align:center" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Caller.Tel, new { htmlAttributes = new { @class = "form-control", dir = "rtl", id = "callerTel", style = "width:50%;margin-right:-20px;", @readonly = "true" } })
      
                    </div>
                </div>
                <div class="form-group" style="margin-top:38px;">
                    @Html.Label("توضیح در مورد طرف تماس", htmlAttributes: new { @class = "control-label col-md-3", style = "text-align:center" })
                    <div class="col-md-8">
                        @Html.TextAreaFor(model => model.Caller.Comments, new { @class = "form-control", row = "15", style = "height:100px;width:70%;margin-right:-20px;", dir = "rtl", id = "callercomments", @readonly = "true" })

                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-7" style="padding-bottom:5px;">
            <div class="form-group" style="margin-top:2px;">
                @Html.Label("بخش مربوطه", new { @class = "control-label col-md-2" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Department.Name, new { htmlAttributes = new { @class = "form-control", dir = "rtl", id = "callerTel", style = "width:50%;margin-right:-20px;", @readonly = "true" } })
                </div>
            </div>
            <div class="form-group" style="margin-top:10px;">
                @Html.Label("تاریخ تماس", new { @class = "control-label col-md-2" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Date, new { @class = "col-md-2 form-control", dir = "rtl", style = "width:40%;text-align:center;float:center", @readonly = "true" })
                </div>
            </div>

            <div class="form-group">
                @Html.Label("زمان تماس", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Time, new { @class = "col-md-2 form-control", dir = "rtl", style = "width:40%;text-align:center;float:center", @readonly = "true" })
                </div>
            </div>

            <div class="form-group">

                <div class="col-md-7" style="margin-right:5%;margin-top:1%;margin-bottom:1%">
                    @if (Model.IsCallingFromOutside)
                    {
                        <span>تماس ورودی</span>
                        @Html.RadioButtonFor(model => model.IsCallingFromOutside, true, new { @checked = true, style = "margin-left:3%;", disabled = "true"})
                        <span>تماس خروجی</span>
                        @Html.RadioButtonFor(model => model.IsCallingFromOutside, false, new { disabled = "true" })
                    }
                    else
                    {
                        <span>تماس ورودی</span>
                        @Html.RadioButtonFor(model => model.IsCallingFromOutside, true, new { disabled = "true" })
                        <span>تماس خروجی</span>
                        @Html.RadioButtonFor(model => model.IsCallingFromOutside, false, new { @checked = true, style = "margin-left:1%;", disabled = "true" })
                    }




                </div>
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-9">
                    @Html.TextAreaFor(model => model.Comments, new { @class = "form-control", row = "15", style = "height:100px;width:50%;", dir = "rtl", @readonly = "true" })
                    @Html.ValidationMessageFor(model => model.Comments, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <hr />
    </div>
}

<div style="padding-right:20px;padding-top:15px;">
    @Html.ActionLink("بازگشت به لیست تماس‌ها", "Index", null, new { style = "font-size:18px;" })
</div>


