@using Neshagostar.WebUI.Areas.PersonnelManagement.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<h2>صفحه ورود</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl, area = "PersonnelManagement" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.Hidden("returnUrl", ViewBag.ReturnUrl as string )
                @Html.AntiForgeryToken()
                <h4>لطفا از نام کاربری برای ورود استفاده فرمائید</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style="padding-right:30px;">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="ورود" class="btn btn-default" style="width:15%;" />
                    </div>
                </div>
                @*<p>
                    @Html.ActionLink("Register as a new user", "Register", null ,new { style = "padding-right:80px;" })
                </p>*@
                @* Enable this once you have account confirmation enabled for password reset functionality
                    <p>
                    @Html.ActionLink("Forgot your password?", "ForgotPassword")
                    </p>*@
            }
        </section>
    </div>
</div>