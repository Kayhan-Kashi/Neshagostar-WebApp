@model IEnumerable<Neshagostar.DAL.DataModel.CommerceRelated.ProductsRelated.ProductCategory>

@{
    ViewBag.Title = "Index";
}

<h1>لیست دسته های محصول</h1>
<p style="font-size:20px;padding-top:10px;">
    @Html.ActionLink("ثبت", "Create", new { area = "Commerce", controller="ProductCategories" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SendingUnit)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SendingUnit)
            </td>
            <td>
                @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }) |
                @Html.ActionLink("جزئیات", "Details", new { id = item.Id }) |
                @Html.ActionLink("حذف", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
