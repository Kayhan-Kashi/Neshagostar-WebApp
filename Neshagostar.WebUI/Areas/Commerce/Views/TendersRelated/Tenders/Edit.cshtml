    <div>
        <div class="col-md-9 well">

            <div class="col-md-12">
                <div class="col-md-4">
                    @Html.Label("هزینه حمل کل موضوع مناقصه", htmlAttributes: new { @class = "control-label col-md-6", style = "margin-top:1%" })

                    @Html.TextBox("CarriageCost", null, htmlAttributes: new { @class = "form-control col-md-6", placeholder = "هزینه حمل ", style = "text-align:center;width:50%; ", id = "carriageCost" })
                </div>
                <div class="col-md-4">
                    @Html.Label("هزینه ضمانت نامه", htmlAttributes: new { @class = "control-label col-md-6", style = "margin-top:2%" })

                    @Html.TextBox("CarriageCost", null, htmlAttributes: new { @class = "form-control col-md-6", placeholder = "هزینه ضمانت نامه ", style = "text-align:center;width:45%; ", id = "guarantyCost" })
                </div>
                <div class="col-md-4">
                    @Html.Label("هزینه بازرسی : ", htmlAttributes: new { @class = "control-label col-md-6", style = "margin-top:2%" })

                    @Html.TextBox("CarriageCost", null, htmlAttributes: new { @class = "form-control col-md-6", placeholder = "هزینه بازرسی ", style = "text-align:center;width:40%; ", id = "inspectioncost" })
                </div>
            </div>
            <div class="col-md-12" style="margin-top:3%">
                <div class="col-md-6">
                    @Html.Label("مبلغ ضمانت نامه شرکت در مناقصه : ", htmlAttributes: new { @class = "control-label col-md-6", style = "margin-top:2%" })

                    @Html.TextBox("ParticipatingGuarantyPrice", null, htmlAttributes: new { @class = "form-control col-md-6", placeholder = "شرکت در مناقصه ", style = "text-align:center;width:40%; ", id = "participatingGuarantyPrice" })
                </div>
                <div class="col-md-6">
                    @Html.Label("مبلغ برآورد : ", htmlAttributes: new { @class = "control-label col-md-3", style = "margin-top:2%" })

                    @Html.TextBox("PredictionPrice", null, htmlAttributes: new { @class = "form-control col-md-6", placeholder = "مبلغ برآورد ", style = "text-align:center;width:40%; ", id = "predictionPrice" })
                </div>
            </div>
        </div>
        <div class="col-md-9 well">
            <div class="col-md-12">
                <div class="col-md-10">
                    @Html.Label("آیا برنده شدیم ؟ ", htmlAttributes: new { @class = "control-label col-md-3" })
                    @if (Model.IsSuccessful)
                    {
                        <span>بله</span>
                        @Html.RadioButtonFor(model => model.IsSuccessful, true, new { @checked = true, style = "margin-left:1%;" })
                        <span>خیر</span>
                        @Html.RadioButtonFor(model => model.IsSuccessful, false)
                    }
                    else
                    {
                        <span>بله</span>
                        @Html.RadioButtonFor(model => model.IsSuccessful, true, new { style = "margin-left:1%;" })
                        <span>خیر</span>
                        @Html.RadioButtonFor(model => model.IsSuccessful, false, new { @checked = true })

                    }

                </div>
            </div>
            <div class="col-md-12" style="margin-top:2%;">

                @Html.Label("توضیحات", htmlAttributes: new { @class = "col-md-2" })

                @Html.TextArea("Comments", null, new { @class = "form-control col-md-5", id = "comments", style = "width:100%;" })
            </div>
        </div>





    </div>


    <div class="col-md-12" style="margin-top:2%">
        <div class="table table-hover">
            <table style="text-align:center;table-layout:auto;width:100%">
                <thead style="border:solid 3px;">
                    <tr>
                        <th style="text-align:center;">نوع محصول</th>
                        <th style="text-align:center;">مقدار</th>
                        <th style="text-align:center;">قیمت به ازای هر واحد</th>
                        <th style="text-align:center;">وزن به ازای هر واحد</th> 
                        <th style="text-align:center;">قیمت به ازای هر کیلو</th>
                        <th style="text-align:center;">قیمت مواد اولیه روز</th>
                        <th style="text-align:center;">مجموع وزن</th>
                        <th style="text-align:center;">قیمت واشر</th>
                        <th style="text-align:center;">مجموع قیمت</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody id="orderItemsClmns">
                    @foreach(var tenderItem in Model.TenderItems)
                    {
                    <tr>
                        <td>
                            @tenderItem.Product.Title
                        </td>
                        <td>
                            @Html.DisplayFor(t => tenderItem.Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(t => tenderItem.PricePerUnit)
                        </td>
                        <td>
                            @Html.DisplayFor(t => tenderItem.NominalWeightPerMeter)
                        </td>
                        <td>
                            @Html.DisplayFor(t => tenderItem.PricePerKilo)
                        </td>
                        <td>
                            @Html.DisplayFor(t => tenderItem.HDPEPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(t => tenderItem.TotalWeight)
                        </td>
                        <td>
                            @Html.DisplayFor(t => tenderItem.WasherPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(t => tenderItem.TotalPrice)
                        </td>
                        <td>
                            @Html.ActionLink("ویرایش", "EditTenderItem", new { area = "Commerce", controller = "Tenders", id = tenderItem.Id })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="col-md-12">
        <div class="table table-bordered">
            <table style="text-align:center;table-layout:fixed;width:100%">
                <thead style="text-align:center;">
                    <tr style="text-align:center;">
                        <th style="text-align:center;">
                            قیمت کل بدون ارزش افزوده
                        </th>
                        <th style="text-align:center;">
                            مقدار ارزش افزوده
                        </th>
                        <th style="text-align:center;">
                            قیمت کل با ارزش افزوده
                        </th>
                  

                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td id="priceWithoutAddedCost">
                            @Html.DisplayFor(model => model.FinalPrice)
                        </td>
                        <td id="addedCost">
                            @{ 
                                var addedAmount = Model.FinalPrice * 0.09;
                            }
                            @Html.DisplayFor(model => addedAmount)
                        </td>
                        <td id="finalPrice">
                            @{
                                var finalPriceWithAdded = Model.FinalPrice * 1.09;
                            }
                            @Html.DisplayFor(model => finalPriceWithAdded)
                        </td>             
                    </tr>
                </tbody>
            </table>
        </div>
    </div>


    <div class="form-group">
        <div>
            <input  id="btnSubmit" type="submit" value="ویرایش" class="btn btn-primary btn-block" />
        </div>
    </div>

}


<div style="padding-right:20px;padding-top:30px;">
