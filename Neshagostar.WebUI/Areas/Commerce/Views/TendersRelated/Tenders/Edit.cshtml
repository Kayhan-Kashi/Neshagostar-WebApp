<h2 style="padding-right:0px;margin-bottom:2%">ثبت مناقصه  </h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        @Html.HiddenFor(Model => Model.TenderId)
        @Html.Hidden("customerIdHidden", null, new { id = "customerIdHidden" })
        <div class="col-md-12 well">
            <div class="form-group">
                @{
                    var date = PersianDateTime.Now.ToString().Substring(0, 10);
                }
                <div class="col-md-7">
                    @Html.Label("عنوان مناقصه", htmlAttributes: new { @class = "control-label col-md-2", style = "padding-top:5px" })
                    @Html.EditorFor(model => model.TenderTitle, new { htmlAttributes = new { @class = "form-control col-md-6", dir = "rtl", id = "tenderTitle", style = "width:70%;" } })
                </div>
                <div class="col-md-3">
                    @Html.Label("تاریخ", htmlAttributes: new { @class = "control-label col-md-3", style = "padding-top:5px" })
                    @Html.EditorFor(model => model.DateTime, new { htmlAttributes = new { @class = "form-control col-md-5", dir = "rtl", id = "datetime", style = "width:50%;text-align:center", placeholder = date } })
                </div>
            </div>

        </div>
        <div class="col-md-12 well" style="padding-left:30px;">
            <div class="form-group">
                <div class="col-md-4">
                    @Html.Label("نام مناقصه گذار", htmlAttributes: new { @class = "control-label col-md-4", style = "text-align:center;padding-top:5px" })
                    <div>
                        @Html.EditorFor(model => model.CustomerName, new { htmlAttributes = new { @class = "form-control", dir = "rtl", id = "customer_name", style = "width:50%;" } })
                    </div>

                </div>
                <div class="col-md-4">
                    @Html.Label("شماره تماس", htmlAttributes: new { @class = "control-label col-md-4", style = "text-align:center;;padding-top:5px" })
                    @Html.EditorFor(model => model.ContactNumber, new { htmlAttributes = new { @class = "form-control", dir = "rtl", id = "customer_tel", style = "width:50%;" } })
                </div>
                <div class="col-md-4">
                    @Html.Label("محل ", htmlAttributes: new { @class = "control-label col-md-4", style = "text-align:center;;padding-top:5px" })
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", dir = "rtl", id = "customer_address", style = "width:50%;" } })
                </div>

            </div>
        </div>
    </div>

